<header>
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-main" aria-controls="navbar-afs" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-container w-100">
      <div id="navbar-main" class="collapse navbar-collapse justify-content-sm-center">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to root_url, class: "nav-link nav-home" do %>
              <i class="fa fa-home"></i> <span class="d-sm-none d-lg-inline">Accueil</span>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to root_url, class: "nav-link nav-home" do %>
              <i class="fa fa-home"></i> <span class="d-sm-none d-lg-inline">Accueil</span>
            <% end %>
          </li>
          <% if current_user %>
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle nav-user" data-toggle="dropdown" data-hover="dropdown">
                <div class="avatar-thumbnail "
                     style="background-image: url(<%= current_user.avatar_thumb_url %>);"
                     ></div>
                <span class="caret"></span>
              </a>
              <div class="dropdown-menu" role="menu">
                <h6 role="presentation" class="dropdown-header">
                  <%= current_user.name %>
                </h6>
                <% if current_user&.admin? %>
                  <%= link_to "Votre profil", root_path, class: "dropdown-item" %>
                  <div class="dropdown-divider"></div>
                  <h6 role="presentation" class="dropdown-header">
                    Administration
                  </h6>
                  <%= link_to "Invités", guests_path, class: "dropdown-item" %>
                  <div class="dropdown-divider"></div>
                <% end %>
                <%= link_to "Déconnexion", signout_path, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to signin_path, class: "signin-elem nav-link nav-signin" do %>
                <span class="d-sm-none d-md-inline">Connexion</span>
                <span class="d-none d-sm-inline d-md-none"><i class="fa fa-sign-in"></i></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
