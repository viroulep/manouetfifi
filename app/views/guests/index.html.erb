<p id="notice"><%= notice %></p>

<h1>Guests</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Country</th>
      <th>Confirmed</th>
      <th>Invited by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td>
          <%= public_image_tag(guest.avatar.mini_thumb.url, width: 64) %>
        </td>
        <td><%= guest.name %></td>
        <td><%= guest.description %></td>
        <td><%= flag_icon(guest.country_iso2) %></td>
        <td><%= guest.confirmed %></td>
        <td><%= guest.invited_by %></td>
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

