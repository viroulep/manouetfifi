<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @table.name %>
</p>

<% if @table.guests.any? %>
  <div class="list-group">
    <% @table.guests.each do |g| %>
      <%= render "shared/guest", guest: g, extra_classes: "list-group-item" %>
    <% end %>
  </div>
<% else %>
  <p>Pas d'invités à cette table</p>
<% end %>

<%= link_to 'Edit', edit_table_path(@table) %> |
<%= link_to 'Back', tables_path %>
