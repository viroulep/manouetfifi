<% provide(:title, "Home") %>
<% carousel_images = [] %>
<% carousel_images = [12, *1..11, *13..25].map { |i| "#{root_url}/images/carousel/#{i}.jpg" } %>
<%# carousel_images << "#{root_url}/images/manou_fifi_japon.jpg" %>
<%# carousel_images << "#{root_url}/images/fifi_fred_mouchoum.jpg" %>
<%# carousel_images << "#{root_url}/images/manou_fifi_temple.jpg" %>

<div id="homepage">
  <div id="carousel-homepage" class="carousel slide" data-ride="carousel" data-interval="3500">
    <ol class="carousel-indicators">
      <% carousel_images.each_with_index do |_, i| %>
        <li data-target="#carousel-homepage" data-slide-to="<%= i %>" class="<%= 'active' if i == 0 %>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% carousel_images.each_with_index do |url, i| %>
        <%= render "carousel_item", url: url, active: i == 0 %>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carousel-homepage" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel-homepage" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <%= render 'layouts/flash' %>

  <div class="container">

    <!-- Three columns of text below the carousel -->
    <div class="row">
      <div class="col-12 col-md-6">
        <%= public_image_tag("images/bike_names.png", width: "90%") %>
      </div>
      <div class="col-12 col-md-6 infos d-flex flex-column text-center">
        <div>
          Mercredi
          <br/>
          28 Ao√ªt 2019
          <hr/>
        </div>
        <div>
          La Boussac <%= public_image_tag("images/france.png", width: "80px") %>
        </div>
      </div>
      <div class="col-12 col-sm-4 mt-2">
        <%= link_to("Planning", page_path("schedule"), class: "btn btn-custom mx-auto w-100") %>
      </div>
      <div class="col-12 col-sm-4 mt-2">
        <%= link_to("Lieux importants", page_path("location"), class: "btn btn-custom mx-auto w-100") %>
      </div>
      <div class="col-12 col-sm-4 my-2">
        <%= link_to("Se loger", page_path("under_construction"), class: "btn btn-custom mx-auto w-100") %>
      </div>
    </div><!-- /.row -->
  </div>
</div>
